<Window x:Class="KinAid_Attempt1.AudioMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:KinAid_Attempt1"
        Title="KinAid" Height="{StaticResource ResourceKey=HalfAppHeight}" Width="{StaticResource ResourceKey=HalfAppWidth}" 
        ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <StackPanel>
        <TextBlock Height="{StaticResource ResourceKey=BigButtonHeight}" MaxWidth="{StaticResource ResourceKey=HalfAppWidth}"  FontSize="{StaticResource ResourceKey=SmallButtonFont}" Name="message" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid Height="{StaticResource ResourceKey=SmallButtonHeight}" Name="buttons">
        </Grid>
    </StackPanel>
</Window>
