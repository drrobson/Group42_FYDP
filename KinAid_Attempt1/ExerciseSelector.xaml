<UserControl x:Class="KinAid_Attempt1.ExerciseSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:buttonui="ButtonUI"
             xmlns:audioui="AudioUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <ScrollViewer Height="270" Width="300">
            <WrapPanel Orientation="Horizontal" Name="buttonPanel">
            </WrapPanel>
        </ScrollViewer>
        <Grid Name="bottomPanel" Height="30">
            <mc:AlternateContent>
                <mc:Choice Requires="buttonui">
                    <Button Content="Add Exercise" Click="selectedAddExercise" HorizontalAlignment="Stretch" />
                </mc:Choice>
                <mc:Choice Requires="audioui">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="Voice.bmp" Stretch="None" />
                        <Label Content="Add Exercise" BorderThickness="1" BorderBrush="Black" />
                    </StackPanel>
                </mc:Choice>
            </mc:AlternateContent>
        </Grid>
    </StackPanel>
</UserControl>
